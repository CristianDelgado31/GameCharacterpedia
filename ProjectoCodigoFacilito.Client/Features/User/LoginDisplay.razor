@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity!.Name!
        <a href="LogOut">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a href="create-user">Register</a>
        <a href="sign-in">Sign in</a>
    </NotAuthorized>
</AuthorizeView>