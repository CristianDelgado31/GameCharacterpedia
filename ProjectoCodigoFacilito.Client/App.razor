@using Microsoft.AspNetCore.Components.Authorization
@using ProjectoCodigoFacilito.Client.Features.Components
@using ProjectoCodigoFacilito.Client.Features.User
@using Microsoft.AspNetCore.Authorization


<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin/> <!-- En esta parte de codigo redijo al login si no esta autorizado el usuario al ingresar a ciertas paginas/componentes -->
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>
</Router>

