@page "/create-character"
@using ProjectoCodigoFacilito.Client.Services
@using ProjectoCodigoFacilito.Application.Characters.Commands.CreateCharacter

@inject CharacterService characterService

<h1>Create Character</h1>

<EditForm Model="@model" OnValidSubmit="@CreateCharacter">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="@model.Name" />
    <InputText @bind-Value="@model.Game" />
    <InputText @bind-Value="@model.History" />
    <InputText @bind-Value="@model.Role" />

    <InputFile OnChange="@HandleFileSelected" />
    <button type="submit">Create Character</button>
</EditForm>

@if (responseMessage != null)
{
    <p>@responseMessage</p>
}

@code {
    private CreateCharacterCommand model = new CreateCharacterCommand();
    private string responseMessage;
    private IBrowserFile uploadedImage;

    private async Task CreateCharacter()
    {
        try
        {
            responseMessage = await characterService.CreateCharacter(model, uploadedImage);
        }
        catch (Exception ex)
        {
            responseMessage = "Error: " + ex.Message;
        }
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        uploadedImage = e.File;
    }
}
